@model SoftwareViewModel
@{
    ViewData["Title"] = "E-İmza Yazılımları";
}
<!-- Hero -->
<!-- Hero Slider -->
<div class="swiper hero-slider relative">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        <!-- Slides -->
        <!-- Slide1 -->
        <div class="swiper-slide">
            <div class="hero-slider-item animated-background bg-gradient-to-r from-primary-red via-red-800 to-red-900">
                <div class="hero-slider-item-content !bg-transparent">
                    <div class="hero-slider-item-content-box">
                        <div class="hero-slider-item-subtitle">
                            @Localizer["E-Güven"]
                        </div>
                        <div class="hero-slider-item-title !text-5xl">
                            @Localizer["E-İmza Yazılımları"]
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content -->
<section class="e-imza-yazilimlar-os mt-10" data-aos="fade-up">
    <div class="container">
        <div class="text-center text-primary-dark text-3xl font-bold max-w-screen-md mx-auto mt-14">
            @Localizer["2. Lütfen işletim sisteminize uygun yazılımı yükleyiniz"].
        </div>
        <div class="grid md:grid-cols-2 grid-cols-1 gap-x-16 mt-10 items-center"
             data-aos="fade-up">
            <div class="flex flex-col gap-5">
                @foreach (SoftwareLanguageInfo item in Model.SoftwareLanguageInfos)
                {
                    <div class="rounded-5 bg-white sr-item-shadow flex items-center justify-between px-6 py-3 gap-3">
                        <div class="text-primary-dark text-lg font-semibold">
                            @item.Title
                        </div>
                        @if (item.Type == 1)
                        {
                            <a href="@item.FileUrl" class="btn btn-primary-red-outline ml-auto" target="_blank">@Localizer["İndir"]</a>
                        }
                        else
                        {
                            <a href="/Images/Software/@item.File" class="btn btn-primary-red-outline ml-auto" target="_blank">@Localizer["İndir"]</a>
                        }
                    </div>
                }
            </div>
            <figure class="mt-10 sm:mt-0 rounded-5">
                <img src="/assets/images/eimza-yazilimlar/os-sample.png" alt="E-İmza yazılımlar detay" class="w-full h-full rounded-5" />
            </figure>
        </div>
        <div class="flex items-center justify-center mt-16"
             data-aos="fade-up">
            <a href="HelperVideo" class="btn btn-primary-red">@Localizer["Yardımcı videolar için tıklayınız"]</a>
        </div>
    </div>
</section>
<script type="module">
    import {
        stickyHeader,
        checkTheme,
        customTab,
        mobileSubMenu,
        drawerControl,
    } from '/assets/js/main.js'
    document.addEventListener('DOMContentLoaded', function () {
        stickyHeader()
        checkTheme()
        customTab()
        mobileSubMenu()
        drawerControl()
        AOS.init({
            duration: 800,
        })
    })
</script>
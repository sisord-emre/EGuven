                    <div class="my-10 text-xl font-bold text-primary-dark">
                        Sipariş Özeti
                    </div>
                    <form class="base-form">
                        <div class="grid xl:grid-cols-3 grid-cols-1 gap-16">
                            <div class="xl:col-span-1">
                                <!-- sepet urunleri -->
                                <div class="w-full flex flex-col gap-4">
                                    <div class="rounded-5 bg-white sr-item-shadow flex items-center justify-between gap-5 product-in-basket-item">
                                        <div class="pl-6">
                                            <figure class="max-w-28">
                                                <img src="assets/images/form-urun-secimi-sample.png"
                                                     alt="1 yıllık e-imza paketi image" />
                                            </figure>
                                        </div>
                                        <div class="text-sm text-primary-dark">
                                            <div class="font-semibold mb-2">
                                                1 Yıllık E-imza Paketi
                                            </div>
                                            <div class="font-normal product-total-price">
                                                1630.00 TL
                                            </div>
                                        </div>
                                        <div>
                                            <div class="flex flex-col items-center justify-center w-10">
                                                <button type="button"
                                                        class="text-primary-dark text-sm py-2 px-3 font-bold w-full text-center border-0 add-product-quantity">
                                                    +
                                                </button>
                                                <input type="text"
                                                       class="bg-form-product-price text-primary-dark text-sm p-2 font-bold w-full text-center !border-0 product-quantity !h-auto"
                                                       value="1" />

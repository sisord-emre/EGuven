@model LayoutViewModel
@{
    CultureInfo langCode = Thread.CurrentThread.CurrentUICulture;
}
<!doctype html>
<html lang="@langCode">
<!-- [Head] start -->

<head>
    <title>@Model.Config.Title</title>
    <!-- [Meta] -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="author" content="@Model.Config.LicenseCompanyName" />
    <link rel="icon" href="/Images/favicon.png" type="image/x-icon" />

    <link href="/AdminAssets/css/plugins/animate.min.css?v=@Model.Config.AssetsVersion" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/AdminAssets/css/plugins/dataTables.bootstrap5.min.css?v=@Model.Config.AssetsVersion" />
    <link rel="stylesheet" href="/AdminAssets/css/plugins/buttons.bootstrap5.min.css?v=@Model.Config.AssetsVersion" />
    <link rel="stylesheet" href="/AdminAssets/fonts/phosphor/duotone/style.css?v=@Model.Config.AssetsVersion" />
    <!-- [Font] Family -->
    <link rel="stylesheet" href="/AdminAssets/fonts/inter/inter.css?v=@Model.Config.AssetsVersion" id="main-font-link" />
    <!-- [phosphor Icons] https://phosphoricons.com/ -->
    <link rel="stylesheet" href="/AdminAssets/fonts/phosphor/duotone/style.css?v=@Model.Config.AssetsVersion" />
    <!-- [Tabler Icons] https://tablericons.com -->
    <link rel="stylesheet" href="/AdminAssets/fonts/tabler-icons.min.css?v=@Model.Config.AssetsVersion" />
    <!-- [Feather Icons] https://feathericons.com -->
    <link rel="stylesheet" href="/AdminAssets/fonts/feather.css?v=@Model.Config.AssetsVersion" />
    <!-- [Font Awesome Icons] https://fontawesome.com/icons -->
    <link rel="stylesheet" href="/AdminAssets/fonts/fontawesome.css?v=@Model.Config.AssetsVersion" />
    <!-- [Material Icons] https://fonts.google.com/icons -->
    <link rel="stylesheet" href="/AdminAssets/fonts/material.css?v=@Model.Config.AssetsVersion" />
    <link rel="stylesheet" href="/AdminAssets/fonts/fontawesome.css?v=@Model.Config.AssetsVersion" />
    <!-- [Template CSS Files] -->
    <link rel="stylesheet" href="/AdminAssets/css/style.css?v=@Model.Config.AssetsVersion" id="main-style-link" />
    <link rel="stylesheet" href="/AdminAssets/css/style-preset.css?v=@Model.Config.AssetsVersion" />
    <link rel="stylesheet" href="/AdminAssets/css/uikit.css?v=@Model.Config.AssetsVersion" />
    <link rel="stylesheet" href="/AdminAssets/css/plugins/select2.min.css?v=@Model.Config.AssetsVersion" />
    <link rel="stylesheet" href="/AdminAssets/css/plugins/toastr.css?v=@Model.Config.AssetsVersion" />
    <!-- [Custom CSS Files] -->
    <link rel="stylesheet" href="/AdminAssets/css/myStyle.css?v=@Model.Config.AssetsVersion" />
    <meta name="robots" content="noindex, nofollow">
    <meta name="googlebot" content="noindex, nofollow">
</head>
<!-- [Head] end -->
<!-- [Body] Start -->
<body data-pc-preset="preset-1" data-pc-sidebar-caption="true" data-pc-layout="vertical" data-pc-direction="ltr" data-pc-theme_contrast="" data-pc-theme="light">
    <!-- [ Pre-loader ] start -->
    <div class="page-loader">
        <div class="bar"></div>
    </div>
    <!-- [ Pre-loader ] End -->
    <!-- [ Sidebar Menu ] start -->
    <nav class="pc-sidebar">
        <div class="navbar-wrapper">
            <div class="m-header">
                <a href="/Admin" class="b-brand text-primary">
                    <!-- ========   Change your logo from here   ============ -->
                    <img src="/Images/logo.png" class="img-fluid logo-lg" style="max-width: 65px;" />
                    <span class="badge bg-light-success rounded-pill ms-2 theme-version">v1.0.0</span>
                </a>
            </div>
            <div class="navbar-content">
                <ul class="pc-navbar" style="padding-bottom: 5rem;">
                    <li class="pc-item pc-caption">
                        <input type="text" id="menuAra" class="form-control border-primary" placeholder="Menü Ara..." style="width: 100%;" autocomplete="off">
                    </li>
                    @await Component.InvokeAsync("Menu")
                </ul>
            </div>
        </div>
    </nav>
    <!-- [ Sidebar Menu ] end -->
    <!-- [ Header Topbar ] start -->
    <header class="pc-header">
        <div class="header-wrapper">
            <!-- [Mobile Media Block] start -->
            <div class="me-auto pc-mob-drp">
                <ul class="list-unstyled">
                    <!-- ======= Menu collapse Icon ===== -->
                    <li class="pc-h-item pc-sidebar-collapse">
                        <a href="#" class="pc-head-link ms-0" id="sidebar-hide">
                            <i class="ti ti-menu-2"></i>
                        </a>
                    </li>
                    <li class="pc-h-item pc-sidebar-popup">
                        <a href="#" class="pc-head-link ms-0" id="mobile-collapse">
                            <i class="ti ti-menu-2"></i>
                        </a>
                    </li>
                    <li class="pc-h-item d-none d-md-inline-flex">
                        <form class="form-search">
                            <i class="search-icon">
                                <svg class="pc-icon">
                                    <use xlink:href="#custom-search-normal-1"></use>
                                </svg>
                            </i>
                            <input type="search" class="form-control" id="mainSearch" name="mainSearch" placeholder="Search" style="width: 300px;" autocomplete="off" required />
                            <ul class="main-search" id="mainSearchList" style="display: none;">
                            </ul>
                        </form>
                    </li>
                </ul>
            </div>
            <!-- [Mobile Media Block end] -->
            <div class="ms-auto">
                <ul class="list-unstyled">
                    <li class="dropdown pc-h-item">
                        <a class="pc-head-link dropdown-toggle arrow-none me-0" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            @Model.Languages.Where(x=>x.Code==langCode.ToString()).FirstOrDefault().Name
                        </a>
                        <div class="dropdown-menu dropdown-menu-end pc-h-dropdown">
                            @foreach (Language item in Model.Languages.Where(x => x.Code != langCode.ToString()))
                            {
                                <a href="/Admin/Home/SetLang?lng=@item.Code&returnUrl=/Admin" class="dropdown-item">
                                    <span>@item.Name</span>
                                </a>
                            }
                        </div>
                    </li>
                    <li class="dropdown pc-h-item">
                        <a class="pc-head-link dropdown-toggle arrow-none me-0" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <svg class="pc-icon">
                                <use xlink:href="#custom-sun-1"></use>
                            </svg>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end pc-h-dropdown">
                            <a href="#!" class="dropdown-item" onclick="layout_change('dark')">
                                <svg class="pc-icon">
                                    <use xlink:href="#custom-moon"></use>
                                </svg>
                                <span>@Localizer["admin.Dark"]</span>
                            </a>
                            <a href="#!" class="dropdown-item" onclick="layout_change('light')">
                                <svg class="pc-icon">
                                    <use xlink:href="#custom-sun-1"></use>
                                </svg>
                                <span>@Localizer["admin.Light"]</span>
                            </a>
                            <a href="#!" class="dropdown-item" onclick="layout_change_default()">
                                <svg class="pc-icon">
                                    <use xlink:href="#custom-setting-2"></use>
                                </svg>
                                <span>@Localizer["admin.Default"]</span>
                            </a>
                        </div>
                    </li>
                    @if (@Model.AppUser.NotificationStatus)
                    {
                        <li class="dropdown pc-h-item">
                            <a class="pc-head-link dropdown-toggle arrow-none me-0"
                            data-bs-toggle="dropdown"
                            href="#"
                            role="button"
                            aria-haspopup="false"
                            aria-expanded="false">
                                <svg class="pc-icon">
                                    <use xlink:href="#custom-notification"></use>
                                </svg>
                                <span id="UnseenNotificationCount" class="badge bg-success pc-h-badge">0</span>
                            </a>
                            <div class="dropdown-menu dropdown-notification dropdown-menu-end pc-h-dropdown">
                                <div class="dropdown-header d-flex align-items-center justify-content-between">
                                    <h5 class="m-0">@Localizer["admin.Bildirimler"]</h5>
                                    <a href="javascript:NotificationRead(0)" class="btn btn-link btn-sm">@Localizer["admin.Tümü Okundu"]</a>
                                </div>
                                <div class="dropdown-body text-wrap header-notification-scroll position-relative" style="max-height: calc(100vh - 215px)">
                                    <div id="NotifacitionList">

                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                    <li class="dropdown pc-h-item header-user-profile">
                        <a class="pc-head-link dropdown-toggle arrow-none me-0" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" data-bs-auto-close="outside" aria-expanded="false">
                            <img src="/AdminAssets/images/user/avatar-2.jpg" alt="user-image" class="user-avtar" />
                        </a>
                        <div class="dropdown-menu dropdown-user-profile dropdown-menu-end pc-h-dropdown">
                            <div class="dropdown-header d-flex align-items-center justify-content-between">
                                <h5 class="m-0">@Localizer["admin.Profil"]</h5>
                            </div>
                            <div class="dropdown-body">
                                <div class="profile-notification-scroll position-relative" style="max-height: calc(100vh - 225px)">
                                    <div class="d-flex mb-1">
                                        <div class="flex-shrink-0">
                                            <img src="/AdminAssets/images/user/avatar-2.jpg" alt="user-image" class="user-avtar wid-35" />
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@Model.AppUser.Name @Model.AppUser.SurName 🖖</h6>
                                            <span>@Model.AppUser.Email</span>
                                        </div>
                                    </div>
                                    <hr class="border-secondary border-opacity-50" />
                                    <div class="card">
                                        <div class="card-body py-3">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <h5 class="mb-0 d-inline-flex align-items-center">
                                                    <svg class="pc-icon text-muted me-2">
                                                        <use xlink:href="#custom-notification-outline"></use>
                                                    </svg>@Localizer["admin.Bildirimler"]
                                                </h5>
                                                <div class="form-check form-switch form-check-reverse m-0">
                                                    <input class="form-check-input f-18" type="checkbox" role="switch" id="notificationSwitch"
                                                    @(Model.AppUser.NotificationStatus ? "checked" : "") />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="text-span">@Localizer["admin.Ayarlar"]</p>
                                    <a type="button" onclick="GetPage('0','/Admin/User/ProfileList');" class="dropdown-item">
                                        <span>
                                            <svg class="pc-icon text-muted me-2">
                                                <use xlink:href="#custom-setting-outline"></use>
                                            </svg>
                                            <span>@Localizer["admin.Profil Güncelle"]</span>
                                        </span>
                                    </a>
                                    <a type="button" onclick="GetPage('0','/Admin/User/ChangePasswordList');" class="dropdown-item">
                                        <span>
                                            <svg class="pc-icon text-muted me-2">
                                                <use xlink:href="#custom-lock-outline"></use>
                                            </svg>
                                            <span>@Localizer["admin.Şifre Değiştir"]</span>
                                        </span>
                                    </a>
                                    <hr class="border-secondary border-opacity-50" />
                                    <div class="d-grid mb-3">
                                        <a href="~/Admin/Home/LogOut" class="btn btn-primary">
                                            <svg class="pc-icon me-2">
                                                <use xlink:href="#custom-logout-1-outline"></use>
                                            </svg>@Localizer["admin.Çıkış"]
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <!-- [ Header ] end -->
    <!-- [ Main Content ] start -->
    <div class="pc-container">
        <div class="pc-content pb-1" id="Pages">
            <!-- [ Main Content ] start -->
            @RenderBody()
            <!-- [ Main Content ] end -->
        </div>
    </div>
    <!-- [ Main Content ] end -->
    <footer class="pc-footer">
        <div class="footer-wrapper container-fluid">
            <div class="row">
                <div class="col my-1">
                    <p class="m-0">@Localizer["admin.Copyright"] © <a href="@Model.Config.LicenseUrl" target="_blank">@Model.Config.LicenseCompanyName</a></p>
                </div>
                <div class="col-auto my-1">
                    <ul class="list-inline footer-link mb-0">
                        <li class="list-inline-item" id="time"></li>
                        <li class="list-inline-item">@Model.Config.MadeCompanyName</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!-- Required Js -->
    <script src="/AdminAssets/js/jquery-3.7.1.min.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/plugins/popper.min.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/plugins/simplebar.min.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/plugins/bootstrap.min.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/fonts/custom-font.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/pcoded.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/plugins/feather.min.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/index.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/plugins/choices.min.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/plugins/clipboard.min.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/component.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/ckeditor/ckeditor.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/plugins/select2.min.js?v=@Model.Config.AssetsVersion"></script>
    <script src="/AdminAssets/js/plugins/toastr.min.js?v=@Model.Config.AssetsVersion"></script>
</body>
<!-- [Body] end -->
</html>

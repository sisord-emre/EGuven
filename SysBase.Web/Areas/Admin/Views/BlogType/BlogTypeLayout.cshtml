@model List<BlogType>

@{
    Layout = null;
    List<BlogType> orderedBlogTypes = Model;
}

<div class="row" id="card-drag-area">
    @foreach (var item in orderedBlogTypes)
    {
        <div class="col-md-2" id="blogTypeSatir-@item.Id">
            <div class="card grab" style="border: 1px solid #cacfe7;">
                <div class="card-content">
                    <div class="card-content">
                        <div class="card-body" style="height: 100px;">
                            <h4 class="card-title">@item.Title</h4>
                        </div>
                        <div class="card-footer" style="text-align: right; padding: 0.5rem 0.5rem;">
                            @if (item.Status)
                            {
                                <div class="badge badge-success" style="float: left; margin-top: 0.75rem;">@Localizer["admin.Aktif"]</div>
                            }
                            else
                            {
                                <div class="badge badge-danger" style="float: left; margin-top: 0.75rem;">@Localizer["admin.Pasif"]</div>
                            }
                            <button type="button" onclick="GetPage('0','Admin/BlogType/Add','@item.Id');" class="btn btn-warning net-button">
                                <i class="fa fa-edit"></i>
                            </button>
                            <button type="button" onclick="blogTypeSil('@item.Id')" class="btn btn-danger net-button">
                                <i class="fa fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (orderedBlogTypes.Count > 0)
{
    <div class="col-md-12" style="text-align: center; padding: 2rem;">
        <button type="button" class="btn btn-success" onclick="blogTypeLayoutAdd()">
            <i class="la la-floppy-o"></i> @Localizer["admin.BlogType Düzenini Kaydet"]
        </button>
    </div>
}
<script src="AdminAssets/dragula.min.js"></script>
<script src="AdminAssets/drag-drop.js"></script>

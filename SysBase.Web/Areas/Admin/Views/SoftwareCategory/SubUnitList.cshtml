@using SysBase.Core.Models;
@{
    Layout = "";
}
<div class="table-responsive">
    <table class="table table-striped table-bordered dataex-html5-export" id="listTable">
        <thead>
            <tr>
                <th>@Localizer["admin.ID"]</th>
                <th>@Localizer["admin.Başlık"]</th>
                <th>@Localizer["admin.Sırası"]</th>
                <th>@Localizer["admin.Durum"]</th>
                <th>@Localizer["admin.Kayıt Tarihi"]</th>
                <th style="width:220px;text-align:center">@Localizer["admin.İşlemler"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SoftwareCategoryLanguageInfoContent item in Model.SoftwareCategoryLanguageInfoContents)
            {
                <tr id="lineSubUnit_@item.Id">
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Sequence</td>
                    <td>
                        @if (item.Status)
                        {
                            <div class="badge rounded-pill text-bg-success">@Localizer["admin.Aktif"]</div>
                        }
                        else
                        {
                            <div class="badge rounded-pill text-bg-danger">@Localizer["admin.Pasif"]</div>
                        }
                    </td>
                    <td data-sort="@item.CreatedDate.ToString("yyyyMMddHHmmssfff")">@item.CreatedDate</td>
                    <td style="text-align:center">
                        <div class="btn-group btn-group-sm" role="group">
                            <textarea id="gContent-@item.Id" style="display:none">@item.Body</textarea>
                            <button type="button" onclick="SubUnitUpdate('@item.Id',@item.SoftwareCategoryLanguageInfoId,'@item.Title','@item.Sequence','@item.Status');" class="btn btn-success">@Localizer["admin.Düzenle"]</button>
                            <button type="button" onclick="SubUnitDelete('@item.Id');" class="btn btn-danger">@Localizer["admin.Sil"]</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>